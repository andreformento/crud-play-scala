# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                         controllers.Application.index
GET     /index                                    controllers.Application.index
GET     /db_teste                                 controllers.Application.dbTest
GET     /db_teste2                                controllers.Application.dbTest2

GET     /user/edit/:id                            controllers.UserController.edit(id: Long)
GET     /user/new                                 controllers.UserController.newUser
GET     /user/list                                controllers.UserController.userList(page:Int=1)
GET     /user/list/:page                          controllers.UserController.userList(page:Int)
POST    /user/save                                controllers.UserController.save
POST    /user/error                               controllers.UserController.save
GET     /show_user_by_role                        controllers.UserController.showUserByRole

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)
