# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                         controllers.Application.index
GET     /index                                    controllers.Application.index
GET     /index2                                   controllers.Application.index2
GET     /db_teste                                 controllers.Application.dbTest
GET     /db_teste2                                controllers.Application.dbTest2
GET     /user/edit/:id                            controllers.UserController.showUserById(id: Long)
GET     /user/new                                 controllers.UserController.newUser
POST    /user/save                                controllers.UserController.save
POST    /user/error                               controllers.UserController.save
GET     /show_user_by_role                        controllers.UserController.showUserByRole

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                             controllers.Assets.versioned(path="/public", file: Asset)
